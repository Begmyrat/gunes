<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/t_titleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/recyclerView"
        android:fontFamily="@font/nunitosans_bold"/>

    <View
        android:id="@+id/v_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.2"
        android:background="@color/colorBlack"
        android:layout_below="@+id/t_titleRow"/>

    <LinearLayout
        android:id="@+id/linear_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/t_titleRow">

        <TextView
            android:id="@+id/t_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IOS DEV"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunitosans_light"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginTop="-5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/cardview"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/t_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Makalanyn bodysy\nHahaha"
                        android:textSize="16sp"
                        android:maxLines="2"
                        android:layout_gravity="top"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/nunitosans_bold"/>

                    <TextView
                        android:id="@+id/t_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Flutter's not all fun and games, the cur..."
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunitosans_light"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="0dp">

                    <ImageView
                        android:id="@+id/i_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/adam"/>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/r_1"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/t_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Thomas Middel"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:fontFamily="@font/nunitosans_light"/>

                    <TextView
                        android:id="@+id/t_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/nunitosans_light"
                        android:layout_gravity="bottom"
                        android:text="Feb 23 - 4 min read"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/r_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/i_bookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_bookmark_border_24"/>

                    <ImageView
                        android:id="@+id/i_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/i_bookmark"
                        android:src="@drawable/ic_baseline_more_vert_24"/>


                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>