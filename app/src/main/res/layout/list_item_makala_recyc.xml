<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="270dp"
        android:layout_height="180dp"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="4dp"
        android:outlineSpotShadowColor="@color/colorBlack"
        android:elevation="2dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/i_image"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:scaleType="centerCrop"
                android:src="@drawable/adam" />

            <TextView
                android:id="@+id/t_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans_bold"
                android:text="Your Addiction to Outrage is Ruining Your life"
                android:textColor="@color/colorBlack"
                android:paddingHorizontal="10dp"
                android:maxLines="2"
                android:layout_marginTop="7dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/i_image"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/t_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans_regular"
                android:gravity="left|center_vertical"
                android:text="Pete Ross in The Bad Influence"
                android:paddingHorizontal="10dp"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/t_title"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/t_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans_regular"
                android:gravity="left|center_vertical"
                android:text="Pete Ross in The Bad Influence"
                android:paddingHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@+id/t_author"
                android:alpha="0.5"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:paddingBottom="5dp"
                android:textSize="12sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>