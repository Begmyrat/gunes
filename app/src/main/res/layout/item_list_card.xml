<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/r_box"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:background="@color/colorPalette2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="top|right"
        android:layout_margin="10dp"
        android:src="@drawable/ic_pin"/>

    <TextView
        android:id="@+id/t_title"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nunitosans_regular"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:maxLines="12"
        android:ellipsize="end"
        android:layout_above="@+id/i_more"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        android:text="Vücudumuz, her bölgesiyle kusursuz şekilde işleyen müthiş bir sisteme sahiptir. Bu sistemi oluşturan tüm organların çalışma prensipleri hayranlık duygusu uyandırır. Apandisitin ne işe yaradığına daha yakından baktığımızda da yine böyle bir duyguya sahip olabilirsiniz. Apandis bölgesi diğer organlara kıyasla çok daha gizemlidir ve işlevleri pek çok kişi tarafından bilinmez."
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/i_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/t_author"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"
        android:src="@drawable/ic_more_horizontal"
        android:visibility="visible" />

    <TextView
        android:id="@+id/t_author"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        android:fontFamily="@font/nunitosans_extra_bold"
        android:text="'Admin'"/>


</RelativeLayout>